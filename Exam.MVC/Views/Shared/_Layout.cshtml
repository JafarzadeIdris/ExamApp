<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Exam.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Exam.MVC.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <header>
    </header>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-3 sidebar">
                <div class="list-group">
                    <a asp-controller="Teacher" asp-action="Index" class="list-group-item list-group-item-action active">
                        <i class="bi bi-person-badge-fill"></i> Teacher
                    </a>
                    <a asp-controller="Student" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="bi bi-mortarboard-fill"></i> Student
                    </a>
                    <a asp-controller="Lesson" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="bi bi-journal-bookmark-fill"></i> Lesson
                        </a>
                    <a asp-controller="Exam" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="bi bi-clipboard-check-fill"></i> Exam
                    </a>
                </div>
            </div>

            <!-- Main content -->
            <div class="col main-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
