@using Exam.Application.Dtos.Teacher
@model List<TeacherDto>
@{
    ViewData["Title"] = "Teacher Page";
}
<div class="container">
    <div class="row card">
        <h1>Teacher List</h1>
        <div class="container">
            <div class="row">
                <a asp-controller="Teacher" asp-action="Create" class="btn btn-secondary">Create</a>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var teacher in Model)
                {
                    <tr>
                        <td>@teacher.FirstName</td>
                        <td>@teacher.LastName</td>
                        <td>
                            <a asp-controller="Teacher" asp-action="Update" asp-route-itemid="@teacher.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil-square"></i>Update
                            </a>
                            <a asp-action="Delete" asp-route-teacherId="@teacher.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>