@using Exam.Application.Dtos.Teacher
@model List<TeacherDto>

<div class="container">
    <div class="row card">
        <h1>Teacher List</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model)
                {
                    <tr>
                        <td>@teacher.FirstName</td>
                        <td>@teacher.LastName</td>
                        <td><a asp-controller="Teacher" asp-action="Update" asp-route-itemid="@teacher.Id">Update</a></td>
                        <td><a  asp-action="Delete" asp-route-id="@teacher.Id" >Remove</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>