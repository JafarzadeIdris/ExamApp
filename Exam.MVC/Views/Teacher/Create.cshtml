@using Exam.MVC.Models.Teacher
@model CreateTeacherViewModel

<div class="card shadow-sm mt-4 p-4">
    <div class="card-body">
        <h2 class="text-center mb-4">Create Teacher</h2>

        <form asp-action="Create" method="post">

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">
                    <span class="text-danger">*</span> First Name
                </label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                <div class="invalid-feedback">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label">
                    <span class="text-danger">*</span> Last Name
                </label>
                <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                <div class="invalid-feedback">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary btn-lg">Create</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
            </div>
        </form>
    </div>
</div>