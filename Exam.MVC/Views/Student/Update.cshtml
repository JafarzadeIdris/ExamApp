@using Exam.MVC.Models.Student
@model UpdateStudentViewModel

<div class="card shadow-sm mt-4 p-4">
    <div class="card-body">
        <h2 class="text-center mb-4">Update Student</h2>

        <form asp-action="Update" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Number" class="form-label">
                    <span class="text-danger">*</span> Number
                </label>
                <input asp-for="Number" class="form-control" placeholder="Enter student number" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">
                    <span class="text-danger">*</span> Name
                </label>
                <input asp-for="Name" class="form-control" placeholder="Enter first name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Surname" class="form-label">
                    <span class="text-danger">*</span> Surname
                </label>
                <input asp-for="Surname" class="form-control" placeholder="Enter last name" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ClassLevel" class="form-label">
                    <span class="text-danger">*</span> Class
                </label>
                <input asp-for="ClassLevel" class="form-control" placeholder="Enter class (1-11)" />
                <span asp-validation-for="ClassLevel" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-circle-fill"></i> Update
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-x-circle-fill"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
