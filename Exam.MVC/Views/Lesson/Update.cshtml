@using Exam.MVC.Models.Lesson
@model UpdateLessonViewModel

@{
    ViewData["Title"] = "Update Lesson";
}

<div class="card shadow-sm mt-4 p-4">
    <div class="card-body">
        <h2 class="text-center mb-4">Update Student</h2>
        <form asp-action="Update" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Code" class="form-label">
                    <span class="text-danger">*</span> Code
                </label>
                <input asp-for="Code" class="form-control" placeholder="e.g. MAT" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">
                    <span class="text-danger">*</span> Lesson Name
                </label>
                <input asp-for="Name" class="form-control" placeholder="e.g. Mathematics" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ClassLevel" class="form-label">
                    <span class="text-danger">*</span> Class Level
                </label>
                <input asp-for="ClassLevel" class="form-control" placeholder="1 - 11" />
                <span asp-validation-for="ClassLevel" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TeacherId" class="form-label">
                    <span class="text-danger">*</span> Select Teacher
                </label>
                <select asp-for="TeacherId" asp-items="Model.Teachers" class="form-select">
                    <option disabled selected value="">-- Select a teacher --</option>
                </select>
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-check-circle-fill"></i> Update
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-x-circle-fill"></i> Cancel
                </a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
